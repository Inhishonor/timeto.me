<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TimeTo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/my_dn_background</item>
        <!-- Status bar background + icons color -->
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">@bool/my_dn_is_light</item>
        <!-- Navigation bar background + icons color (changing programmatically) -->
        <item name="android:navigationBarColor">@color/my_dn_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/my_dn_is_light</item>
    </style>

    <style name="MyFullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

</resources>
